@model IEnumerable<VogueLink2.Models.Cart>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            <p>Size</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.Product.Product_Name, "ProductDetails", "Home", new { id = item.Product.Product_Id })
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Cart_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Cart_Id })
        </td>
    </tr>
    }

</table>


<div style="text-align: center;">
    <p>
        <a href="@Url.Action("Order", "UserAccess")" class="btn btn-success">Place Order</a>
    </p>
</div>
